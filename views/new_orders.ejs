    <link rel="icon" sizes="325x325" href="https://save71.com/images/save71_icon.webp">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <title>Save 71</title>
</head>




<!-- tab section -->
<div class=" my-5 px-2 mt-5">
    <% for (let i = 0; i < userOrderAndOrderDetails.length; i++) { %>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Customer Details</h5>
                    <p class="card-text">Customer Name: <%= userOrderAndOrderDetails[i].user.user_name %></p>
                    <p class="card-text">Mobile Number: <%= userOrderAndOrderDetails[i].user.phone %></p>
                    <p class="card-text">Address: <%= userOrderAndOrderDetails[i].order.address %> </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Order Details</h5>
                    <p class="card-text">Order Id: <%= userOrderAndOrderDetails[i].order.order_id %></p>
                    <p class="card-text">Placed Date: <%= userOrderAndOrderDetails[i].order.placed_date %> </p>
                    <p class="card-text">Delivery Date: <%= userOrderAndOrderDetails[i].order.delivery_date %></p>
                    <p class="card-text">Status: <%= userOrderAndOrderDetails[i].order.status %></p>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>

                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>

            </thead>
            <tbody>
                <% for (let j = 0; j < userOrderAndOrderDetails[i].orderDetails.length; j++) { %>
                <tr>
                    <td><%= userOrderAndOrderDetails[i].orderDetails[j].product_name %></td>
                    <td><%= userOrderAndOrderDetails[i].orderDetails[j].product_quantity %></td>
                    <td><%= userOrderAndOrderDetails[i].orderDetails[j].product_total_price %></td>
                </tr>

                <% } %>
            </tbody>
        </table>
    </div>



    <!--print-->
    <% } %>

    <div class="d-flex justify-content-center">
        <button class="btn btn-primary" onclick="window.print()">Print</button>
    </div>



</div>




</div>


<!-- Filter Script -->
<%- include('footer-one'); -%>